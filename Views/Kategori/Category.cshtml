@using MvsStok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model  PagedList.IPagedList<TBLKATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}


<table class="table table-bordered">
    <tr>
        <th>Category IDs </th>
        <th>Names </th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    <tbody>

        @foreach (var ktgr in Model)
        {
            <tr>
                <td width="120px">@ktgr.KATEGORIID</td>
                <td>@ktgr.KATEGORIAD</td>
                <td width="120px"><a href="/Kategori/KategoriSil/@ktgr.KATEGORIID" class="btn btn-danger">Delete</a></td>
                <td width="120px"><a href="/Kategori/categoryGetter/@ktgr.KATEGORIID" class="btn btn-success">Update</a></td>
            </tr>
        }


    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Category",new { page }))
<a href="/Kategori/YeniKategori" class="btn btn-primary">New Category</a>