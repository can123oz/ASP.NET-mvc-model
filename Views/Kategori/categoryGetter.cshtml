@model MvsStok.Models.Entity.TBLKATEGORILER

@{
    ViewBag.Title = "categoryGetter";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-lg-4">
        @using (Html.BeginForm("UpdateCategory", "Kategori", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.KATEGORIID)
                @Html.TextBoxFor(m => m.KATEGORIID, new { @class="form-control"})
            </div>
            <div style="margin-top:30px">
                @Html.LabelFor(m => m.KATEGORIAD)
                @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "form-control" })
            </div>
            <div style="margin-top:15px">
                <button class="btn btn-primary">Update Category</button>
            </div>
        }
    </div>
</div>
